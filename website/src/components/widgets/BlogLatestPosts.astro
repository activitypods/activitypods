---
import Grid from '~/components/blog/Grid.astro';
import { findLatestPosts } from '~/utils/blog';

const posts = await findLatestPosts({ count: 3 });
---

<section class="px-4 pb-16 mx-auto max-w-5xl lg:pb-20">
  <div class="flex flex-col lg:justify-between lg:flex-row">
    <h2 class="max-w-lg text-3xl font-bold tracking-tight sm:text-4xl sm:leading-none mb-2 lg:mb-4 group font-heading">
      <span class="inline-block">Activity<span class="text-primary-500">Pods</span> news</span>
    </h2>
  </div>
  <Grid posts={posts} />
</section>
