---
import { SITE } from "~/config.mjs";
import { getCanonical, getHomePermalink } from "~/utils/permalinks";
import Layout from "~/layouts/PageLayout.astro";

import Hero from "~/components/widgets/Hero.astro";
import Features from "~/components/widgets/Features.astro";
import Solid from "~/components/widgets/Solid.astro";
import ActivityPub from "~/components/widgets/ActivityPub.astro";
import ActivityPods from "~/components/widgets/ActivityPods.astro";
import Choices from "~/components/widgets/Choices.astro";
import Developers from "~/components/widgets/Developers.astro";
import Applications from "~/components/widgets/Applications.astro";
import Sponsors from "~/components/widgets/Sponsors.astro";
import Newsletter from "~/components/widgets/Newsletter.astro";
import LatestPosts from "~/components/blog/LatestPosts.astro";

const meta = {
  title: SITE.title,
  description: SITE.description,
  canonical: getCanonical(getHomePermalink()),
};
---

<Layout {meta}>
  <Hero />
  <ActivityPub />
  <Solid />
  <ActivityPods />
  <Choices />
  <Features />
  <Applications />
  <Developers />
  <LatestPosts />
  <Newsletter />
  <Sponsors />
</Layout>
